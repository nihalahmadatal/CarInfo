@model CarInfo.Models.TblCar

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>EditCar</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

</head>
<body class="bg-light">
    <div class="container mt-5">
        <div class="card shadow-lg">
            <div class="card-header bg-primary text-white">
                <h4 class="mb-0">Edit Car Details</h4>
            </div>
            <div class="card-body">
                @using (Html.BeginForm("EditCar", "Car", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()
                    @Html.HiddenFor(model => model.Car_Id)

                    <div class="mb-3">
                        @Html.LabelFor(model => model.Car_Name)
                        @Html.TextBoxFor(model => model.Car_Name, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.Car_Name)
                    </div>

                    <div class="mb-3">
                        @Html.LabelFor(model => model.Brand)
                        @Html.TextBoxFor(model => model.Brand, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.Brand)
                    </div>

                    <div class="mb-3">
                        @Html.LabelFor(model => model.Model)
                        @Html.TextBoxFor(model => model.Model, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.Model)
                    </div>

                    <div class="mb-3">
                        @Html.LabelFor(model => model.Price)
                        @Html.TextBoxFor(model => model.Price, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.Price)
                    </div>

                    <div class="mb-3">
                        @Html.LabelFor(model => model.Year)
                        @Html.TextBoxFor(model => model.Year, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.Year)
                    </div>

                    <div class="mb-3">
                        @Html.LabelFor(model => model.Transmission)
                        @Html.TextBoxFor(model => model.Transmission, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.Transmission)
                    </div>

                    <div class="mb-3">
                        @Html.LabelFor(model => model.Fuel_Type)
                        @Html.TextBoxFor(model => model.Fuel_Type, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.Fuel_Type)
                    </div>

                    <div class="mb-3">
                        @Html.LabelFor(model => model.Features)
                        @Html.TextBoxFor(model => model.Features, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.Features)
                    </div>

                    <div class="d-flex justify-content-end">
                        <input type="submit" value="Save Changes" class="btn btn-primary me-2" />
                        @Html.ActionLink("Cancel", "Index", null, new { @class = "btn btn-secondary" })
                    </div>
                }
            </div>
        </div>
    </div>
</body>
</html>
